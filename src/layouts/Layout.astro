---
const { title = 'Nebraska Lounge & Grill', subtitle = 'Welcome to Our Offerings' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style>
        :root {
            --primary-color: #0B3D02;
            --nav-bg: rgba(0, 0, 0, 0.8);
            --nav-item-bg: rgb(82, 24, 22);
            --nav-hover-bg: rgb(21, 102, 71);
            --welcome-color: rgb(4, 128, 52);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Papyrus', fantasy, sans-serif;
            text-align: center;
            background: #f0f0f0 url('/background-image.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        @media (max-width: 768px) {
            body {
                background-size: contain;
                background-attachment: scroll;
            }
        }

        h1 {
            font-size: 3rem;
            color: var(--primary-color);
            margin-top: 20px;
        }

        h2 {
            font-size: 2rem;
            color: rgb(21, 50, 132);
            margin-top: 10px;
        }
        
        /* Navigation Bar */
        .nav {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
            padding: 10px 20px;
            background: var(--nav-bg);
            border-radius: 10px;
            margin: 10px auto;
            width: fit-content;
            position: relative;
        }

        .nav-item {
            font-size: 1.2rem;
            font-weight: bold;
            padding: 10px 15px;
            color: white;
            text-decoration: none;
            background: var(--nav-item-bg);
            border-radius: 10px;
            transition: background 0.3s ease;
        }

        .nav-item:hover {
            background: var(--nav-hover-bg);
        }

        /* Hamburger Menu */
        .hamburger {
            display: none;
            font-size: 2rem;
            color: white;
            background: none;
            border: none;
            cursor: pointer;
            padding: 10px;
        }

        #nav-toggle {
            display: none;
        }

        @media (max-width: 600px) {
            .hamburger {
                display: block;
            }

            .nav {
                width: 90%;
                flex-direction: column;
                padding: 0;
            }

            .nav-items {
                display: none;
                width: 100%;
                flex-direction: column;
                gap: 10px;
                padding: 10px 0;
            }

            #nav-toggle:checked ~ .nav-items {
                display: flex;
            }

            .nav-item {
                width: 100%;
                border-radius: 0;
                margin: 0;
            }
        }

        .content {
            flex-grow: 1;
            margin-top: 20px;
            width: 100%;
        }

        .menu-image {
            width: 100%;
            max-width: 1200px;
            height: auto;
            margin: 20px auto;
            display: block;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .menu-image:hover {
            transform: scale(1.05);
        }

        .welcome-text {
            font-size: 2rem;
            color: var(--welcome-color);
            font-weight: bold;
            margin-top: 20px;
            font-family: 'Brush Script MT', cursive;
        }

        /* Upcoming Events Slideshow */
        .events-container {
            width: 100%;
            max-width: 1200px;
            margin: 20px auto 0;
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            background: rgba(0, 0, 0, 0.8);
            padding: 20px;
        }

        .events-container h2 {
            font-size: 2rem;
            color: rgb(21, 50, 132);;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            background: rgba(255, 255, 255, 0.1);
            padding: 10px;
            border-radius: 10px;
        }

        .events-slideshow {
            display: flex;
            width: calc(100% * 5); /* 5 events total */
            animation: events-slide 20s infinite linear;
        }

        .event-slide {
            width: calc(100% / 5); /* Each event takes 1/5th of total width */
            flex-shrink: 0;
            position: relative;
            text-align: center;
        }

        .event-slide img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }

        .event-details {
            position: absolute;
            bottom: 10px;
            left: 0;
            right: 0;
            background: rgba(57, 109, 14, 0.8);
            color: white;
            padding: 10px;
            border-radius: 0 0 10px 10px;
            font-size: 1.2rem;
            font-weight: bold;
        }

        @keyframes events-slide {
            0% { transform: translateX(0); }
            100% { transform: translateX(-100%); } /* Full width of unique slides */
        }

        /* Order Button Styling */
        .order-btn {
            background: rgba(57, 109, 14, 0.8);
            color: white;
            border: none;
            padding: 6px 12px; /* Reduced padding for minimal size */
            border-radius: 5px;
            font-weight: bold;
            font-size: 0.9rem; /* Slightly smaller text */
            cursor: pointer;
            transition: background 0.3s ease;
            width: auto; /* Fixed width instead of 100% */
            min-width: 80px; /* Minimal width for readability */
            display: inline-block; /* Prevents full-width stretch */
            text-align: center;
        }

        .order-btn:hover {
            background: rgba(21, 102, 71, 1);
        }

        /* Responsive adjustments for Order Button */
        @media (max-width: 768px) {
            .order-btn {
                padding: 5px 10px;
                font-size: 0.85rem;
                min-width: 70px;
            }
        }

        @media (max-width: 480px) {
            .order-btn {
                padding: 4px 8px;
                font-size: 0.8rem;
                min-width: 60px;
            }
        }

        /* Order Modal */
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            display: none;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 10px;
            width: 90%;
            max-width: 400px;
            text-align: left;
            position: relative;
        }

        .close-modal {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .modal-content h3 {
            margin-bottom: 15px;
            color: var(--primary-color);
        }

        .modal-content label {
            display: block;
            margin: 10px 0 5px;
        }

        .modal-content input, .modal-content select, .modal-content textarea {
            width: 100%;
            padding: 5px;
            margin-bottom: 10px;
        }

        #add-to-cart {
            background: var(--nav-hover-bg);
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            width: 100%;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        #add-to-cart:hover {
            background: rgba(57, 109, 14, 0.8);
        }

        /* Cart (Updated for Readability) */
        .cart {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 900;
            transition: all 0.3s ease;
        }

        .cart-icon {
            background: rgba(0, 0, 0, 0.8);
            color: white;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            cursor: pointer;
            position: relative;
        }

        .cart-count {
            position: absolute;
            top: -5px;
            right: -5px;
            background: red;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
        }

        .cart-content {
            display: none;
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 15px;
            border-radius: 10px;
            width: 100%; /* Ensure it takes available width */
            max-width: 300px; /* Default max-width */
            max-height: 50vh;
            overflow-y: auto;
            position: absolute;
            bottom: 60px;
            right: 0;
        }

        .cart-content ul {
            list-style-type: none;
            margin: 10px 0;
            white-space: normal; /* Allow text wrapping */
            word-wrap: break-word; /* Break long words if needed */
        }

        .cart-content li {
            margin: 5px 0;
            font-size: 1rem; /* Readable font size */
            line-height: 1.4; /* Improve readability */
        }

        .cart-expanded .cart-content {
            display: block;
        }

        #submit-order {
            background: var(--nav-hover-bg);
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            width: 100%;
            cursor: pointer;
            margin-top: 10px;
            transition: background 0.3s ease;
        }

        #submit-order:hover {
            background: rgba(57, 109, 14, 0.8);
        }

        /* Desktop Adjustments */
        @media (min-width: 769px) {
            .cart {
                background: rgba(0, 0, 0, 0.8);
                color: white;
                padding: 15px;
                border-radius: 10px;
                max-width: 300px;
            }

            .cart-icon {
                display: none; /* Hide icon on desktop */
            }

            .cart-content {
                display: block; /* Always show full cart on desktop */
                position: static; /* No absolute positioning */
                max-height: none; /* No scroll limit */
                overflow-y: visible;
            }
        }

        /* Mobile Adjustments (Updated for Wider Cart) */
        @media (max-width: 768px) {
            .cart {
                bottom: 10px;
                right: 10px;
            }

            .cart-icon {
                width: 40px;
                height: 40px;
                font-size: 1.2rem;
            }

            .cart-count {
                width: 18px;
                height: 18px;
                font-size: 0.8rem;
            }

            .cart-content {
                max-width: 80vw; /* Increased from 90vw for better fit */
                width: 320px; /* Fixed width, approx 4x previous effective width */
                min-width: 280px; /* Ensure it doesn’t shrink too much */
                bottom: 50px;
                right: 0;
            }
        }

        footer {
            margin-top: auto;
            padding: 20px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            width: 100%;
        }

        footer a {
            color: #ffd700;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: #fff;
        }

        /* Responsive Adjustments for All Sections */
        @media (max-width: 768px) {
            .events-container h2 {
                font-size: 1.8rem;
            }

            .event-slide img {
                height: 200px;
            }

            .event-details {
                font-size: 1rem;
                padding: 8px;
            }
        }

        @media (max-width: 480px) {
            .events-container {
                padding: 10px;
            }

            .events-container h2 {
                font-size: 1.5rem;
                padding: 8px;
            }

            .event-slide img {
                height: 150px;
            }

            .event-details {
                font-size: 0.9rem;
                padding: 6px;
            }

            .modal-content {
                width: 95%;
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <h1>Nebraska Lounge & Grill</h1>

    <nav class="nav" aria-label="Main navigation">
        <input type="checkbox" id="nav-toggle" aria-label="Toggle navigation">
        <label for="nav-toggle" class="hamburger">☰</label>
        <div class="nav-items">
            <a href="/breakfast" class="nav-item" aria-label="Breakfast Menu">Breakfast</a>
            <a href="/meals" class="nav-item" aria-label="Meals Menu">Meals</a>
            <a href="/drinks" class="nav-item" aria-label="Drinks Menu">Drinks</a>
            <a href="/specials" class="nav-item" aria-label="Specials Menu">Specials</a>
        </div>
    </nav>

    <h2>{subtitle}</h2>

    <img src="/menu-image1.jpg" alt="Delicious Menu" class="menu-image" loading="lazy">
    <p class="welcome-text">Your Club of Choice!</p>

    <div class="content">
        <slot />
    </div>

    <!-- Order Modal -->
    <div id="order-modal" class="modal">
        <div class="modal-content">
            <span class="close-modal">×</span>
            <h3>Order Item</h3>
            <form id="order-form">
                <p id="item-name"></p>
                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" min="1" value="1" required>
                <label for="size">Size:</label>
                <select id="size" name="size"></select>
                <label for="notes">Notes:</label>
                <textarea id="notes" name="notes" rows="2"></textarea>
                <button type="button" id="add-to-cart">Add to Cart</button>
            </form>
        </div>
    </div>

    <!-- Cart -->
    <div id="cart" class="cart">
        <div class="cart-icon">🛒<span id="cart-count" class="cart-count">0</span></div>
        <div class="cart-content">
            <h3>Cart</h3>
            <ul id="cart-items"></ul>
            <p>Total: KSh <span id="cart-total">0</span></p>
            <button id="submit-order">Submit Order</button>
        </div>
    </div>

    <!-- Upcoming Events Slideshow -->
    <section class="events-container">
        <h2>Upcoming Events</h2>
        <div class="events-slideshow">
            <div class="event-slide">
                <img src="/event1.jpg" alt="Event 1" loading="lazy">
                <div class="event-details">Beats & Bliss - Apri 11, 2025</div>
            </div>
            <div class="event-slide">
                <img src="/event2.jpg" alt="Event 2" loading="lazy">
                <div class="event-details">Touch Down - Sat,April 12, 2025</div>
            </div>
            <div class="event-slide">
                <img src="/event3.jpg" alt="Event 3" loading="lazy">
                <div class="event-details">Sunday Night Live- April 11, 2025</div>
            </div>
            <div class="event-slide">
                <img src="/event4.jpg" alt="Event 4" loading="lazy">
                <div class="event-details">Easter Fest- Music/Comedy- April 19, 2025</div>
            </div>
            <div class="event-slide">
                <img src="/event4.jpg" alt="Event 5" loading="lazy">
                <div class="event-details">Easter Music/Comedy Show - April 19, 2025</div>
            </div>
        </div>
    </section>

    <footer>
        <p>Contact Us: 0707444742</p>
        <p>© 2025 Club Nebraska. All Rights Reserved.</p>
        <p>Designed By <a href="https://winkdevsolutions.com" target="_blank">WinKDev Solutions</a></p>
    </footer>

    <!-- JavaScript for Ordering -->
    
    <script>
        let cart = [];

        // Order button click - Opens modal (unchanged)
        document.querySelectorAll('.order-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const item = btn.dataset.item;
                const prices = JSON.parse(btn.dataset.prices);
                const modal = document.getElementById('order-modal');
                const itemName = document.getElementById('item-name');
                const sizeSelect = document.getElementById('size');

                itemName.textContent = item;
                sizeSelect.innerHTML = '';
                for (const [size, price] of Object.entries(prices)) {
                    const option = document.createElement('option');
                    option.value = size;
                    option.textContent = `${size} - KSh ${price}`;
                    sizeSelect.appendChild(option);
                }

                modal.style.display = 'flex';
            });
        });

        // Close modal (unchanged)
        document.querySelector('.close-modal').addEventListener('click', () => {
            document.getElementById('order-modal').style.display = 'none';
        });

        // Add to cart (unchanged)
        document.getElementById('add-to-cart').addEventListener('click', () => {
            const item = document.getElementById('item-name').textContent;
            const quantity = parseInt(document.getElementById('quantity').value);
            const size = document.getElementById('size').value;
            const notes = document.getElementById('notes').value;
            const prices = JSON.parse(document.querySelector(`[data-item="${item}"]`).dataset.prices);
            const price = prices[size];
            const total = price * quantity;

            cart.push({ item, size, quantity, price, total, notes });
            updateCart();
            document.getElementById('order-modal').style.display = 'none';
        });

        // Submit order to WhatsApp (modified)
        document.getElementById('submit-order').addEventListener('click', () => {
            if (cart.length === 0) {
                alert('Your cart is empty!');
                return;
            }

            // Replace with your WhatsApp number (international format, e.g., 254712345678)
            const whatsappNumber = "254720226517";

            // Construct order details
            const orderDetails = cart.map(i => 
                `${i.quantity}x ${i.item} (${i.size}) - KSh ${i.total}${i.notes ? ` [Notes: ${i.notes}]` : ''}`
            ).join('\n');
            const total = cart.reduce((sum, i) => sum + i.total, 0);
            const message = `Hello! Here’s my order:\n\n${orderDetails}\n\nTotal: KSh ${total.toLocaleString()}\n\nPlease confirm availability and delivery details. Thank you!`;

            // Encode and create WhatsApp URL
            const encodedMessage = encodeURIComponent(message);
            const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;

            // Open WhatsApp
            window.open(whatsappUrl, '_blank');

            // Optional: Clear cart after submission
            // cart = [];
            // updateCart();
        });

        // Toggle cart visibility on mobile (unchanged)
        const cartElement = document.getElementById('cart');
        const cartIcon = cartElement.querySelector('.cart-icon');
        cartIcon.addEventListener('click', () => {
            cartElement.classList.toggle('cart-expanded');
        });

        // Update cart display (unchanged)
        function updateCart() {
        const cartItems = document.getElementById('cart-items');
            const cartCount = document.getElementById('cart-count');
            const cartTotal = document.getElementById('cart-total');
            cartItems.innerHTML = cart.map(i => `<li>${i.quantity}x ${i.item} (${i.size}) - KSh ${i.total}</li>`).join('');
            cartCount.textContent = cart.length;
            cartTotal.textContent = cart.reduce((sum, i) => sum + i.total, 0);
        }
    </script>
    </body>
    </html>
