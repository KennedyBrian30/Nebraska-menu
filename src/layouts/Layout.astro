---
const { title, subtitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Papyrus', fantasy;
            text-align: center;
            background: url('/background-image.jpg') no-repeat center center fixed;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        @media (max-width: 768px) {
            body {
                background-size: contain; /* Adjust for mobile */
                background-attachment: scroll; /* Prevent cropping */
            }
        }

        h1 {
            font-size: 80px;
            color: #0B3D02;
            margin-top: 20px;
        }

        h2 {
            font-size: 50px;
            color: rgb(21, 50, 132);
            margin-top: 10px;
        }

        /* Inline Navigation */
        .nav {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap; /* Ensure responsiveness */
            gap: 15px;
            padding: 10px 20px;
            background: rgba(0, 0, 0, 0.8);
            border-radius: 10px;
            margin: 10px auto;
            width: fit-content;
        }

        .nav-item {
            font-size: 20px;
            font-weight: bold;
            padding: 10px 15px;
            color: white;
            text-decoration: none;
            background: rgb(82, 24, 22);
            border-radius: 10px;
            transition: 0.3s;
        }

        .nav-item:hover {
            background: rgb(21, 102, 71);
        }

        /* Responsive navigation for mobile */
        @media (max-width: 600px) {
            .nav {
                flex-direction: column;
                width: 90%;
            }
        }

        .content {
            flex-grow: 1;
            margin-top: 20px;
            width: 100%;
        }

        .menu-image {
            width: 100%;
            max-width: 1200px;
            height: auto;
            margin: 20px auto;
            display: block;
            border-radius: 15px;
        }

        .welcome-text {
            font-size: 50px;
            color: rgb(4, 128, 52);
            font-weight: bold;
            margin-top: 20px;
            font-family: 'Brush Script MT', cursive;
        }

        footer {
            margin-top: auto;
            padding: 20px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            width: 100%;
        }
    </style>
</head>
<body>
    <h1>Nebraska Menu</h1>

    <nav class="nav">
        <a href="/breakfast" class="nav-item">Breakfast</a>
        <a href="/meals" class="nav-item">Meals</a>
        <a href="/drinks" class="nav-item">Drinks</a>
        <a href="/desserts" class="nav-item">Desserts</a>
        <a href="/specials" class="nav-item">Specials</a>
    </nav>

    <h2>{subtitle}</h2>

    <img src="/menu-image.jpg" alt="Delicious Menu" class="menu-image">
    <p class="welcome-text">Welcome to Club Nebraska!</p>

    <div class="content">
        <slot />
    </div>
    
    <footer>
        <p>Contact Us: 0700-123-456 | Email: info@clubnebraska.com</p>
        <p>&copy; 2025 Club Nebraska. All Rights Reserved.</p>
    </footer>
</body>
</html>




