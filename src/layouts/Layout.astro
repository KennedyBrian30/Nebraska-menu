---
const { title = 'Nebraska Lounge & Grill', subtitle = 'Welcome to Our Offerings' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style>
        :root {
            --primary-color: #0B3D02;
            --nav-bg: rgba(0, 0, 0, 0.8);
            --nav-item-bg: rgb(82, 24, 22);
            --nav-hover-bg: rgb(21, 102, 71);
            --welcome-color: rgb(4, 128, 52);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Papyrus', fantasy, sans-serif;
            text-align: center;
            background: #f0f0f0 url('/background-image.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        @media (max-width: 768px) {
            body {
                background-size: contain;
                background-attachment: scroll;
            }
        }

        h1 {
            font-size: 3rem;
            color: var(--primary-color);
            margin-top: 20px;
        }

        h2 {
            font-size: 2rem;
            color: rgb(21, 50, 132);
            margin-top: 10px;
        }

        /* Navigation Bar */
        .nav {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
            padding: 10px 20px;
            background: var(--nav-bg);
            border-radius: 10px;
            margin: 10px auto;
            width: fit-content;
            position: relative;
        }

        .nav-item {
            font-size: 1.2rem;
            font-weight: bold;
            padding: 10px 15px;
            color: white;
            text-decoration: none;
            background: var(--nav-item-bg);
            border-radius: 10px;
            transition: background 0.3s ease;
        }

        .nav-item:hover {
            background: var(--nav-hover-bg);
        }

        /* Hamburger Menu */
        .hamburger {
            display: none;
            font-size: 2rem;
            color: white;
            background: none;
            border: none;
            cursor: pointer;
            padding: 10px;
        }

        #nav-toggle {
            display: none;
        }

        @media (max-width: 600px) {
            .hamburger {
                display: block;
            }

            .nav {
                width: 90%;
                flex-direction: column;
                padding: 0;
            }

            .nav-items {
                display: none;
                width: 100%;
                flex-direction: column;
                gap: 10px;
                padding: 10px 0;
            }

            #nav-toggle:checked ~ .nav-items {
                display: flex;
            }

            .nav-item {
                width: 100%;
                border-radius: 0;
                margin: 0;
            }
        }

        .content {
            flex-grow: 1;
            margin-top: 20px;
            width: 100%;
        }

        .menu-image {
            width: 100%;
            max-width: 1200px;
            height: auto;
            margin: 20px auto;
            display: block;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .menu-image:hover {
            transform: scale(1.05);
        }

        .welcome-text {
            font-size: 2rem;
            color: var(--welcome-color);
            font-weight: bold;
            margin-top: 20px;
            font-family: 'Brush Script MT', cursive;
        }

        footer {
            margin-top: auto;
            padding: 20px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            width: 100%;
        }
    </style>
</head>
<body>
    <h1>Nebraska Lounge & Grill</h1>

    <nav class="nav" aria-label="Main navigation">
        <input type="checkbox" id="nav-toggle" aria-label="Toggle navigation">
        <label for="nav-toggle" class="hamburger">☰</label>
        <div class="nav-items">
            <a href="/breakfast" class="nav-item" aria-label="Breakfast Menu">Breakfast</a>
            <a href="/meals" class="nav-item" aria-label="Meals Menu">Meals</a>
            <a href="/drinks" class="nav-item" aria-label="Drinks Menu">Drinks</a>
            <a href="/desserts" class="nav-item" aria-label="Desserts Menu">Desserts</a>
            <a href="/specials" class="nav-item" aria-label="Specials Menu">Specials</a>
        </div>
    </nav>

    <h2>{subtitle}</h2>

    <img src="/menu-image.jpg" alt="Delicious Menu" class="menu-image" loading="lazy">
    <p class="welcome-text">Welcome to The Nebraska!</p>

    <div class="content">
        <slot />
    </div>
    
    <footer>
        <p>Contact Us: 0700-123-456 | Email: info@clubnebraska.com</p>
        <p>© 2025 Club Nebraska. All Rights Reserved.</p>
    </footer>
</body>
</html>

