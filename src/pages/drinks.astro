<Layout title="Drinks Menu" subtitle="Refresh Your Day">
    <style>
        /* Menu section styling */
        .menu-section {
            text-align: center;
            margin-bottom: 20px;
            padding: 20px;
            border-radius: 10px;
        }

        /* Intro image */
        .intro-image {
            margin-bottom: 20px;
        }

        .intro-image img {
            width: 100%;
            max-width: 1200px; /* Matches layout's menu-image */
            height: auto;
            border-radius: 10px;
            display: block;
            margin: 0 auto;
            transition: transform 0.3s ease;
        }

        .intro-image img:hover {
            transform: scale(1.05);
        }

        /* Menu list */
        .menu-list {
            font-size: 1.2rem;
            font-weight: bold;
            color: white;
            background: rgba(105, 87, 96, 0.8); /* Consistent with Breakfast/Meals */
            padding: 15px;
            border-radius: 10px;
            margin-top: 10px;
            width: 100%;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

        .menu-item {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
        }

        /* Image row */
        .image-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 10px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .image-row img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .image-row img:hover {
            transform: scale(1.05);
        }

        /* Section headers */
        h2 {
            font-size: 2rem;
            color: rgb(4, 128, 52); /* Matches layout's welcome-text */
            font-weight: bold;
            padding: 10px 20px;
            margin: 0 auto 20px;
            text-align: center;
            background: rgba(0, 0, 0, 0.8); /* Matches layout's nav */
            border-radius: 10px;
            width: fit-content;
        }
    </style>

