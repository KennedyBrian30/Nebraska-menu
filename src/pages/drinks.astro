<style>
/* General styling for menu sections */
.menu-section {
    text-align: center;
    margin-bottom: 20px;
    padding: 10px;
}

/* Responsive layout for drink categories */
.drink-category {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
}

.drink-item {
    width: 100%;
    max-width: 300px;
    position: relative;
    text-align: center;
}

.drink-item img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    display: block;
}

.drink-item span {
    display: block;
    font-size: 1.2rem;
    font-weight: bold;
    color: white;
    background: rgba(0, 0, 0, 0.7);
    padding: 8px;
    margin-top: -5px;
}

/* Responsive typography */
h2, h3 {
    font-size: 1.5rem;
    text-align: center;
    color: white;
    background: linear-gradient(90deg, rgba(255, 140, 0, 0.8), rgba(255, 69, 0, 0.8));
    padding: 10px;
    border-radius: 8px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

@media (min-width: 768px) {
    .drink-category {
        flex-direction: row;
    }
    .drink-item {
        width: 45%;
    }
}
</style>

