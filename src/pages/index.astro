---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Club Nebraska Menu" subtitle="Explore Our Culinary Delights">
    <style>
        .menu-container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }

        .menu {
            display: grid;
            gap: 20px;
            padding: 20px;
            justify-items: center;
        }

        .nav-item {
            font-size: 2.5rem;
            font-weight: bold;
            padding: 20px;
            color: white;
            text-decoration: none;
            transition: transform 0.3s ease;
            font-family: 'Brush Script MT', cursive;
            position: relative;
            width: 80%;
            max-width: 500px;
            background: rgba(82, 24, 22, 0.8);
            border-radius: 10px;
        }

        .nav-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 110%;
            height: 100%;
            background: rgba(57, 109, 14, 0.8);
            clip-path: polygon(5% 0%, 95% 0%, 100% 50%, 95% 100%, 5% 100%, 0% 50%);
            z-index: -1;
            transition: background 0.3s ease;
        }

        .nav-item:hover {
            transform: scale(1.05);
        }

        .nav-item:hover::before {
            background: rgba(21, 102, 71, 0.8);
        }

        /* Gallery Styles */
        .gallery-container {
            width: 100%;
            max-width: 1200px;
            margin: 20px auto 0; /* Reduced top margin */
            position: relative;
            overflow: hidden;
            border-radius: 10px;
        }

        .gallery {
            display: flex;
            width: calc(100% * 12); /* 12 images total */
            animation: slide 24s infinite linear; /* Adjusted duration */
        }

        .gallery img {
            width: calc(100% / 12); /* Each image takes 1/12th of total width */
            height: 400px;
            object-fit: cover;
            flex-shrink: 0;
        }

        @keyframes slide {
            0% { transform: translateX(0); }
            100% { transform: translateX(-100%); } /* Full width of unique images */
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .nav-item {
                font-size: 2rem;
                padding: 15px;
                width: 90%;
            }

            .gallery img {
                height: 300px;
            }
        }

        @media (max-width: 480px) {
            .nav-item {
                font-size: 1.5rem;
                padding: 10px;
                width: 90%;
            }

            .gallery img {
                height: 200px;
            }
        }
    </style>

    <div class="menu-container">
        <div class="menu" id="menu">
            <a href="/breakfast" class="nav-item" aria-label="Breakfast Menu">Breakfast</a>
            <a href="/meals" class="nav-item" aria-label="Meals Menu">Meals</a>
            <a href="/drinks" class="nav-item" aria-label="Drinks Menu">Drinks</a>
            <a href="/desserts" class="nav-item" aria-label="Desserts Menu">Desserts</a>
            <a href="/specials" class="nav-item" aria-label="Specials Menu">Specials</a>
        </div>
    </div>
    <div class="gallery-container">
        <div class="gallery">
            <img src="/nebs1.jpg" alt="Gallery Image 1" loading="lazy">
            <img src="/nebs2.jpg" alt="Gallery Image 2" loading="lazy">
