---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Specials Menu" subtitle="Exclusive Offers">
    <style>
        .page-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: white;
            padding: 50px 20px;
            text-transform: uppercase;
            background: url('/specials-bg.jpg') no-repeat center center;
            background-size: cover;
            position: relative;
            width: 100%;
        }

        .page-title::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        .page-title span {
            position: relative;
            z-index: 2;
        }

        .section-header {
            display: block;
            text-align: center;
            padding: 10px 20px;
            color: white;
            font-size: 2rem;
            font-weight: bold;
            background: rgba(57, 109, 14, 0.8);
            margin: 20px auto;
            width: fit-content;
            border-radius: 10px;
        }

        .image-row {
            display: flex;
            flex-wrap: nowrap;
            gap: 10px;
            width: 100%;
            max-width: 1200px;
            padding: 10px 0;
            margin: 0 auto;
            justify-content: space-between;
        }

        .image-row img {
            width: calc(33.33% - 6.67px);
            height: auto;
            border-radius: 10px;
            transition: transform 0.3s ease;
            object-fit: cover;
        }

        .image-row img:hover {
            transform: scale(1.05);
        }

        .menu-list {
            text-align: center;
            font-size: 1.2rem;
            font-weight: bold;
            color: white;
            background: rgba(105, 87, 96, 0.8);
            padding: 15px;
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            border-radius: 10px;
        }

        .menu-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 90%;
            padding: 5px 0;
            margin: 0 auto;
            gap: 10px;
        }

        .menu-item span:first-child {
            flex: 1;
            text-align: left;
        }

        .menu-item span:nth-child(2) {
            min-width: 70px;
            text-align: right;
        }

        .full-breakfast {
            width: 100%;
            max-width: 600px;
            margin: 20px auto;
        }

        .full-breakfast img {
            width: 100%;
            height: auto;
            border-radius: 10px 10px 0 0;
            display: block;
            transition: transform 0.3s ease;
        }

        .full-breakfast img:hover {
            transform: scale(1.05);
        }

        .full-breakfast-details {
            font-size: 1.2rem;
            font-weight: bold;
            color: white;
            background: rgba(124, 12, 68, 0.8);
            padding: 15px;
            text-align: center;
            width: 100%;
            border-radius: 0 0 10px 10px;
        }

        .full-breakfast-details p {
            font-size: 1rem;
            font-weight: normal;
            margin: 10px 0;
        }

        /* Order Button Styling */
        .order-btn {
            background: rgba(57, 109, 14, 0.8);
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            font-weight: bold;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background 0.3s ease;
            width: auto;
            min-width: 80px;
            text-align: center;
        }

        .full-breakfast .order-btn {
            padding: 8px 15px;
            font-size: 1rem;
            margin-top: 10px;
            width: 100%;
        }

        .order-btn:hover {
            background: rgba(21, 102, 71, 1);
        }

        /* Gallery Styling */
        .gallery {
            width: 100%;
            max-width: 1200px;
            margin: 20px auto;
            overflow: hidden;
        }

        .gallery-track {
            display: flex;
            animation: scroll 30s linear infinite;
        }

        .gallery-track img {
            width: 300px;
            height: 200px;
            object-fit: cover;
            margin-right: 10px;
            border-radius: 10px;
        }

        @keyframes scroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-50%);
            }
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .full-breakfast img {
                height: auto;
            }

            .image-row img {
                height: 150px;
            }

            .order-btn {
                padding: 5px 10px;
                font-size: 0.85rem;
                min-width: 70px;
            }

            .full-breakfast .order-btn {
                padding: 8px 15px;
                font-size: 1rem;
            }

            .gallery-track img {
                width: 200px;
                height: 150px;
            }
        }

        @media (max-width: 480px) {
            .full-breakfast-details {
                font-size: 1rem;
            }

            .image-row img {
                height: 100px;
            }

            .menu-list {
                font-size: 1rem;
                padding: 10px;
            }

            .menu-item {
                font-size: 1rem;
            }

            .order-btn {
                padding: 4px 8px;
                font-size: 0.8rem;
                min-width: 60px;
            }

            .full-breakfast .order-btn {
                padding: 6px 10px;
                font-size: 0.9rem;
            }

            .gallery-track img {
                width: 150px;
                height: 100px;
            }
        }
    </style>

