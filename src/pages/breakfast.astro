---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Breakfast Menu" subtitle="Morning Delights">
    <style>
        .page-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: white;
            padding: 50px 20px;
            text-transform: uppercase;
            background: url('/breakfast-bg.jpg') no-repeat center center;
            background-size: cover;
            position: relative;
            width: 100%;
        }

        .page-title::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        .page-title span {
            position: relative;
            z-index: 2;
        }

        .section-header {
            display: block;
            text-align: center;
            padding: 10px 20px;
            color: white;
            font-size: 2rem;
            font-weight: bold;
            background: rgba(57, 109, 14, 0.8);
            margin: 20px auto;
            width: fit-content;
            border-radius: 10px;
        }

        .image-row {
            display: flex;
            flex-wrap: nowrap; /* Keeps images horizontal on all sizes */
            gap: 10px;
            width: 100%;
            max-width: 1200px; /* Consistent with other pages */
            padding: 10px 0;
            margin: 0 auto; /* Centers the row */
            justify-content: space-between; /* Spreads images evenly */
        }

        .image-row img {
            width: calc(33.33% - 6.67px); /* 3 images, accounting for gap */
            height: auto;
            border-radius: 10px;
            transition: transform 0.3s ease;
            object-fit: cover; /* Ensures proper scaling */
        }

        .image-row img:hover {
            transform: scale(1.05);
        }

        .menu-list {
            text-align: center;
            font-size: 1.2rem;
            font-weight: bold;
            color: white;
            background: rgba(105, 87, 96, 0.8);
            padding: 15px;
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            border-radius: 10px;
        }

        .menu-item {
            display: flex;
            justify-content: space-between;
            align-items: center; /* Vertically center items */
            width: 90%;
            padding: 5px 0;
            margin: 0 auto;
            gap: 10px; /* Space between name, price, and button */
        }

        .menu-item span:first-child {
            flex: 1; /* Name takes available space */
            text-align: left;
        }

        .menu-item span:nth-child(2) {
            min-width: 70px; /* Fixed width for price */
            text-align: right;
        }

        .full-breakfast {
            width: 100%;
            margin: 0 auto;
        }

        .full-breakfast img {
            width: 100%;
            height: auto;
            border-radius: 10px 10px 0 0;
            display: block;
            transition: transform 0.3s ease;
        }

        .full-breakfast img:hover {
            transform: scale(1.05);
        }

        .full-breakfast-details {
            font-size: 1.2rem;
            font-weight: bold;
            color: white;
            background: rgba(124, 12, 68, 0.8);
            padding: 15px;
            text-align: center;
            width: 100%;
            border-radius: 0 0 10px 10px;
        }

        /* Order Button Styling */
        .order-btn {
            background: rgba(57, 109, 14, 0.8);
            color: white;
            border: none;
            padding: 6px 12px; /* Smaller padding for listings */
            border-radius: 5px;
            font-weight: bold;
            font-size: 0.9rem; /* Smaller font for listings */
            cursor: pointer;
            transition: background 0.3s ease;
            width: auto; /* Compact width */
            min-width: 80px; /* Uniform minimum width */
            text-align: center;
        }

        .full-breakfast .order-btn {
            padding: 8px 15px; /* Larger padding for NEB Full Breakfast */
            font-size: 1rem; /* Larger font for NEB Full Breakfast */
            margin-top: 10px;
            width: 100%; /* Full width for NEB Full Breakfast */
        }

        .order-btn:hover {
            background: rgba(21, 102, 71, 1);
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .full-breakfast img {
                height: auto;
            }

            .image-row img {
                height: 150px; /* Fixed height for tablets */
            }

            .order-btn {
                padding: 5px 10px;
                font-size: 0.85rem;
                min-width: 70px;
            }

            .full-breakfast .order-btn {
                padding: 8px 15px; /* Keep full breakfast button size */
                font-size: 1rem;
            }
        }

        @media (max-width: 480px) {
            .full-breakfast-details {
                font-size: 1rem;
            }

            .image-row img {
                height: 100px; /* Fixed height for mobile */
            }

            .menu-list {
                font-size: 1rem; /* Smaller text for mobile */
                padding: 10px; /* Reduced padding */
            }

            .menu-item {
                font-size: 1rem; /* Consistent with parent */
            }

            .order-btn {
                padding: 4px 8px;
                font-size: 0.8rem;
                min-width: 60px;
            }

            .full-breakfast .order-btn {
                padding: 6px 10px; /* Slightly smaller but still prominent */
                font-size: 0.9rem;
            }
        }
    </style>

