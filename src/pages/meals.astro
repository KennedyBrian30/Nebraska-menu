---
import Layout from "../layouts/Layout.astro";
---

<style>
/* General styling for menu sections */
.menu-section {
    text-align: center;
    margin-bottom: 20px;
    padding: 10px;
}

/* Responsive layout for main dishes */
.main-dishes {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
}

.main-dish {
    width: 100%;
    max-width: 300px;
    position: relative;
    text-align: center;
}

.main-dish img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    display: block;
}

.main-dish span {
    display: block;
    font-size: 1.2rem;
    font-weight: bold;
    color: white;
    background: rgba(0, 0, 0, 0.7);
    padding: 8px;
    margin-top: -5px;
}

/* Overlay styling for pricing */
.price-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 8px;
    font-size: 1rem;
    font-weight: bold;
    text-align: center;
    border-radius: 8px;
}

/* Responsive styling for dishes and accompaniments */
.dishes-accompaniments {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
}

.more-dishes, .accompaniments {
    width: 100%;
    max-width: 400px;
    text-align: center;
    font-size: 1.2rem;
    font-weight: bold;
    padding: 15px;
    border-radius: 8px;
}

.more-dishes {
    background: rgba(85, 107, 47, 0.8);
}

.accompaniments {
    background: rgba(105, 87, 96, 0.8);
}

.image-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
}

.image-row img {
    width: 100%;
    max-width: 200px;
    height: auto;
    border-radius: 8px;
}

/* Responsive typography */
h2, h3 {
    font-size: 1.5rem;
    text-align: center;
    color: white;
    background: linear-gradient(90deg, rgba(255, 140, 0, 0.8), rgba(255, 69, 0, 0.8));
    padding: 10px;
    border-radius: 8px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

@media (min-width: 768px) {
    .main-dishes {
        flex-direction: row;
    }
    .main-dish {
        width: 45%;
    }
    .dishes-accompaniments {
        flex-direction: row;
        justify-content: space-between;
    }
    .more-dishes, .accompaniments {
        flex: 1;
    }
    .image-row img {
        width: 30%;
    }
}
</style>

