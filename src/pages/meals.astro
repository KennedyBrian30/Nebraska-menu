---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Meals Menu" subtitle="Savor Our Main Courses">
    <style>
        /* Menu section styling */
        .menu-section {
            text-align: center;
            margin-bottom: 20px;
            padding: 10px;
        }

        /* Main dishes grid */
        .main-dishes {
            display: grid;
            grid-template-columns: repeat(2, 1fr); /* Two items per row */
            gap: 10px; /* Reduced from 20px */
            justify-items: center;
            padding: 0 10px;
        }

        .main-dish {
            position: relative;
            width: 100%;
            max-width: 400px; /* Increased from 300px for bigger screens */
        }

        .main-dish img {
            width: 100%;
            height: 250px; /* Increased from 200px for bigger screens */
            border-radius: 10px;
            transition: transform 0.3s ease;
            object-fit: cover;
        }

        .main-dish img:hover {
            transform: scale(1.05);
        }

        .main-dish span {
            display: block;
            font-size: 1.2rem;
            font-weight: bold;
            color: white;
            background: rgba(82, 24, 22, 0.8);
            padding: 8px;
            border-radius: 0 0 10px 10px;
        }

        .price-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(21, 102, 71, 0.8);
            color: white;
            padding: 10px;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .main-dish:hover .price-overlay {
            opacity: 1;
        }

        /* Dishes and accompaniments */
        .dishes-accompaniments {
            display: grid;
            grid-template-columns: 1fr 1fr; /* Side by side */
            gap: 20px;
            padding: 0 10px;
            margin: 20px 0;
        }

        .more-dishes, .accompaniments {
            width: 100%;
            max-width: 400px;
            font-size: 1.2rem;
            font-weight: bold;
            padding: 15px;
            border-radius: 10px;
            color: white;
            margin: 0 auto;
        }

        .more-dishes {
            background: rgba(57, 109, 14, 0.8);
        }

        .accompaniments {
            background: rgba(105, 87, 96, 0.8);
        }

        .menu-item {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
        }

        /* Image row */
        .image-row {
            display: flex;
            flex-wrap: nowrap;
            gap:Fails to parse: 15px; /* Increased from 10px for better spacing */
            width: 100%;
            padding: 20px 0; /* Increased padding for aesthetics */
            justify-content: center;
        }

        .image-row img {
            width: 30%; /* Slightly smaller than 33.33% for better fit */
            height: auto; /* Maintains aspect ratio */
            border-radius: 10px;
            transition: transform 0.3s ease;
            max-height: 300px; /* Caps height for aesthetics */
        }

        .image-row img:hover {
            transform: scale(1.05);
        }

        /* Section headers */
        h2 {
            font-size: 2rem;
            color: rgb(4, 128, 52);
            font-weight: bold;
            padding: 10px 20px;
            margin: 20px auto;
            text-align: center;
            background: rgba(0, 0, 0, 0.8);
            border-radius: 10px;
            width: fit-content;
        }

        h3 {
            font-size: 1.5rem;
            color: white;
            padding: 10px;
            text-align: center;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .main-dishes {
                grid-template-columns: 1fr; /* One item per row */
            }

            .main-dish img {
                height: 200px; /* Adjusted for tablets */
            }

            .dishes-accompaniments {
                grid-template-columns: 1fr; /* Stacked on smaller screens */
            }

            .image-row img {
                width: 30%;
            }
        }

        @media (max-width: 480px) {
            .main-dish img {
                height: 150px; /* Smaller for mobile */
            }
        }
    </style>

    <section class="menu-section">
        <h2>Main Dishes</h2>
        <div class="main-dishes">
            <div class="main-dish">
                <img src="/chicken.jpg" alt="Chicken" loading="lazy">
                <span>Chicken</span>
                <div class="price-overlay">1/4KG - KSh 400<br>1/2KG - KSh 750<br>1KG - KSh 1400</div>
            </div>
            <div class="main-dish">
                <img src="/beef.jpg" alt="Beef" loading="lazy">
                <span>Beef</span>
