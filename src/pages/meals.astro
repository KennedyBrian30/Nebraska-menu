<Layout title="Meals Menu" subtitle="Savor Our Main Courses">
    <style>
        /* Slideshow Gallery */
        .gallery-container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto 20px;
            position: relative;
            overflow: hidden;
            border-radius: 10px;
        }

        .gallery {
            display: flex;
            width: calc(100% * 20); /* 20 images total (10 + 10 duplicates) */
            animation: slide 30s infinite linear;
        }

        .gallery img {
            width: calc(100% / 20); /* Each image takes 1/20th of total width */
            height: 400px;
            object-fit: cover;
            flex-shrink: 0;
        }

        @keyframes slide {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); } /* Halfway since duplicates */
        }

        /* Menu section styling */
        .menu-section {
            text-align: center;
            margin-bottom: 20px;
            padding: 10px;
        }

        /* Main dishes grid */
        .main-dishes {
            display: grid;
            grid-template-columns: repeat(2, 1fr); /* 2 columns on big screens */
            gap: 15px;
            justify-items: center;
            padding: 0 10px;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .main-dish {
            position: relative;
            width: 100%;
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            padding-bottom: 8px;
            transition: transform 0.3s ease;
        }

        .main-dish:hover {
            transform: scale(1.05);
        }

        .main-dish img {
            width: 100%;
            height: 250px;
            border-radius: 10px 10px 0 0;
            object-fit: cover;
        }

        .main-dish span {
            display: block;
            font-size: 1.2rem;
            font-weight: bold;
            color: white;
            background: rgba(82, 24, 22, 0.8);
            padding: 8px;
            border-radius: 0 0 10px 10px;
        }

        .price-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(21, 102, 71, 0.8);
            color: white;
            padding: 10px;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .main-dish:hover .price-overlay {
            opacity: 1;
        }

        /* Dishes and accompaniments */
        .dishes-accompaniments {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            padding: 0 10px;
            margin: 20px 0;
        }

        .more-dishes, .accompaniments {
            width: 100%;
            max-width: 400px;
            font-size: 1.2rem;
            font-weight: bold;
            padding: 15px;
            border-radius: 10px;
            color: white;
            margin: 0 auto;
            transition: transform 0.3s ease;
        }

        .more-dishes:hover, .accompaniments:hover {
            transform: scale(1.02);
        }

        .more-dishes {
            background: rgba(57, 109, 14, 0.8);
        }

        .accompaniments {
            background: rgba(105, 87, 96, 0.8);
        }

        .menu-item {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
        }

        /* Image row */
        .image-row {
            display: flex;
            flex-wrap: nowrap; /* Keeps images horizontal on all sizes */
            gap: 15px;
            width: 100%;
            max-width: 1200px;
            padding: 20px 0;
            margin: 0 auto;
            justify-content: space-between;
        }

        .image-row img {
            width: calc(33.33% - 10px); /* Three images, accounting for gap */
            height: auto;
            border-radius: 10px;
            transition: transform 0.3s ease;
            object-fit: cover;
        }

        .image-row img:hover {
            transform: scale(1.05);
        }

        /* Section headers */
        h2 {
            font-size: 2rem;
            color: rgb(4, 128, 52);
            font-weight: bold;
            padding: 10px 20px;
            margin: 20px auto;
            text-align: center;
            background: rgba(0, 0, 0, 0.8);
            border-radius: 10px;
            width: fit-content;
        }

        h3 {
            font-size: 1.5rem;
            color: white;
            padding: 10px;
            text-align: center;
        }

        /* Order Button Styling (New) */
        .order-btn {
            background: rgba(57, 109, 14, 0.8);
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 10px;
            transition: background 0.3s ease;
            width: 100%;
        }

        .order-btn:hover {
            background: rgba(21, 102, 71, 1);
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .gallery img {
                height: 300px;
            }

            .main-dishes {
                grid-template-columns: repeat(2, 1fr);
            }

            .main-dish img {
                height: 200px;
            }

            .dishes-accompaniments {
                grid-template-columns: 1fr;
            }

            .image-row img {
                height: 150px; /* Fixed height for tablets */
            }
        }

        @media (max-width: 480px) {
            .gallery img {
                height: 200px;
            }

            .main-dishes {
                grid-template-columns: 1fr;
            }

            .main-dish img {
                height: 150px;
            }

            .more-dishes, .accompaniments {
                font-size: 1rem; /* Smaller text for mobile */
                padding: 10px; /* Reduced padding */
            }

            .menu-item {
                font-size: 1rem; /* Consistent with parent */
            }

            .image-row img {
                height: 100px; /* Fixed height for mobile */
            }

            .order-btn {
                padding: 6px 10px;
                font-size: 0.9rem;
            }
        }
    </style>

